<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="createDivipolTable" author="manuel.motta">
        <createSequence sequenceName="SEQ_DIPOCONS" incrementBy="1" startValue="1" />

        <createTable tableName="DIVIPOL">
            <column name="DEPARTAMENTO" type="NUMBER(2)">
                <constraints nullable="false" />
            </column>
            <column name="MUNICIPIO" type="NUMBER(3)">
                <constraints nullable="false" />
            </column>
            <column name="ZONA" type="NUMBER(2)">
                <constraints nullable="false" />
            </column>
            <column name="PUESTO" type="CHAR(2)">
                <constraints nullable="false" />
            </column>
            <column name="DESCRIPCION" type="VARCHAR2(400)">
                <constraints nullable="false" />
            </column>
            <column name="DIPOCONS" type="NUMBER" defaultValueSequenceNext="SEQ_DIPOCONS">
                <constraints nullable="false" />
            </column>
            <column name="DIRECCION" type="VARCHAR2(400)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="DIPOCONS" constraintName="PK_DIVIPOL" tableName="DIVIPOL" />
    </changeSet>

</databaseChangeLog>
